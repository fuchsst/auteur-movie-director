# Backend Service Configuration

# FastAPI Settings
APP_NAME="Auteur Movie Director Backend"
APP_VERSION="0.1.0"
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1

# Database (for future use)
# DATABASE_URL=postgresql://user:password@localhost/gms_db

# Redis (for future use)
# REDIS_URL=redis://localhost:6379

# Service Discovery
SERVICE_DISCOVERY_INTERVAL=30
SERVICE_TIMEOUT=5
RETRY_ATTEMPTS=3
RETRY_DELAY=1

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MESSAGE_QUEUE_SIZE=1000

# File Storage
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
MAX_FILE_SIZE=1073741824  # 1GB in bytes

# Job Queue
JOB_QUEUE_SIZE=100
JOB_TIMEOUT=600  # 10 minutes
CONCURRENT_JOBS=2

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Error Tracking (optional)
# SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_DEBUG_ENDPOINTS=true