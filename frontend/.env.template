# Frontend Environment Variables
# Copy to .env.local for local development

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# App Configuration
VITE_APP_NAME="Auteur Movie Director"
VITE_APP_VERSION="0.1.0"

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_TOOLS=true
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# Canvas Configuration
VITE_CANVAS_MIN_ZOOM=0.1
VITE_CANVAS_MAX_ZOOM=3
VITE_CANVAS_GRID_SIZE=20

# Upload Configuration
VITE_MAX_UPLOAD_SIZE_MB=1000
VITE_ACCEPTED_IMAGE_TYPES=".jpg,.jpeg,.png,.webp,.gif"
VITE_ACCEPTED_VIDEO_TYPES=".mp4,.webm,.mov"
VITE_ACCEPTED_AUDIO_TYPES=".mp3,.wav,.ogg"

# WebSocket Configuration
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# UI Configuration
VITE_THEME_DEFAULT=dark
VITE_ANIMATION_DURATION=200

# External Services (optional)
# VITE_POSTHOG_KEY=your-posthog-key
# VITE_SENTRY_DSN=your-sentry-dsn