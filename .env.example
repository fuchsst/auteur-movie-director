# Auteur Movie Director Configuration
# Copy this file to .env and update with your values

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# Frontend Configuration  
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000

# Workspace Configuration
WORKSPACE_ROOT=./workspace
DEFAULT_QUALITY=standard
MAX_CONCURRENT_JOBS=2

# API Configuration
API_TIMEOUT=300
WEBSOCKET_KEEPALIVE=30

# AI Service Endpoints
COMFYUI_HOST=localhost
COMFYUI_PORT=8188
WAN2GP_HOST=localhost
WAN2GP_PORT=7860
RVC_HOST=localhost
RVC_PORT=7865
AUDIOLDM_HOST=localhost
AUDIOLDM_PORT=7863

# LLM Configuration
LITELLM_MODEL=gpt-3.5-turbo
# OPENAI_API_KEY=your-api-key-here
# ANTHROPIC_API_KEY=your-api-key-here
# HUGGINGFACE_TOKEN=your-token-here

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security
SECRET_KEY=change-this-in-production
CORS_ORIGINS=["http://localhost:3000"]

# Git Configuration
GIT_AUTO_COMMIT=false
GIT_LFS_ENABLED=true

# Docker Configuration
DOCKER_NETWORK=amd-network
COMPOSE_PROJECT_NAME=amd

# VRAM Management
VRAM_BUDGET_GB=16
VRAM_SAFETY_MARGIN=0.1
ENABLE_VRAM_MONITORING=true

# Performance
ENABLE_CACHING=true
CACHE_TTL=3600
MAX_UPLOAD_SIZE_MB=1000